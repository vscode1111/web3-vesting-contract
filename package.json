{
  "name": "sqr-vesting-contract",
  "description": "Solidity smart contracts for SQR vesting functionality",
  "version": "0.0.10",
  "scripts": {
    "clean": "shx rm -rf ./dist ./artifacts ./cache ./coverage ./typechain-types ./coverage.json && yarn typechain",
    "commit": "git-cz",
    "build": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile && tsc",
    "verify": "hardhat verify",
    "slither": "slither contracts/SQRVesting.sol --solc-remaps '@openzeppelin=node_modules/@openzeppelin'",
    "coverage": "cross-env COVERAGE=true cross-env ENV=test hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" --show-stack-traces && pnpm typechain",
    "deploy": "hardhat deploy",
    "deploy:accounts": "hardhat deploy --tags accounts",
    "deploy:deploy": "hardhat deploy --tags SQRVesting:deploy",
    "deploy:upgrade": "hardhat deploy --tags SQRVesting:upgrade",
    "deploy:verify": "hardhat deploy --tags SQRVesting:verify",
    "deploy:fetch": "hardhat deploy --tags SQRVesting:fetch",
    "deploy:set-allocations": "hardhat deploy --tags SQRVesting:set-allocations",
    "deploy:claim1": "hardhat deploy --tags SQRVesting:claim1",
    "deploy:claim2": "hardhat deploy --tags SQRVesting:claim2",
    "deploy:claim3": "hardhat deploy --tags SQRVesting:claim3",
    "deploy:withdraw-excess-amount": "hardhat deploy --tags SQRVesting:withdraw-excess-amount",
    "deploy:publish-abi": "hardhat deploy --tags SQRVesting:publish-abi",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yml --ignore-path ./.eslintignore --ext .js,.ts .",
    "postinstall": "husky install && set DOTENV_CONFIG_PATH=./.env.example yarn typechain",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "format": "prettier --config ./.prettierrc --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "format:check": "prettier --check --config ./.prettierrc.yml \"**/*.{js,json,md,sol,ts,yml}\"",
    "test": "cross-env ENV=test hardhat test --network hardhat",
    "unit-test": "mocha -r ts-node/register 'common/**/*spec.ts'",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/bignumber": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.5",
    "@nomicfoundation/ignition-core": "^0.15.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/hardhat-upgrades": "^3.0.5",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.14",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.17.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.30",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "app-root-path": "^3.1.0",
    "chai": "^4.3.10",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eth-permit": "^0.2.3",
    "ethers": "^6.11.1",
    "fastify-tsconfig": "^2.0.0",
    "fs-extra": "^11.2.0",
    "hardhat": "^2.22.2",
    "hardhat-deploy": "^0.12.2",
    "hardhat-gas-reporter": "^2.0.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "lodash": "^4.17.21",
    "merkletreejs": "^0.3.11",
    "mocha": "^10.4.0",
    "pinst": "^3.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "shx": "^0.3.4",
    "solhint": "^4.5.2",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.11",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.2",
    "typescript": "^5.4.3",
    "uuid": "^9.0.1"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethers",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity",
    "typescript",
    "typechain"
  ],
  "packageManager": "yarn@3.2.1",
  "publishConfig": {
    "access": "public"
  }
}
