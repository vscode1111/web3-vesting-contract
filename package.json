{
  "name": "sqr-vesting-contract",
  "description": "Solidity smart contracts for SQR vesting functionality",
  "version": "0.0.43",
  "scripts": {
    "clean": "shx rm -rf ./dist ./artifacts ./cache ./coverage ./typechain-types ./coverage.json && yarn typechain",
    "commit": "git-cz",
    "build": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile && yarn typechain && tsc",
    "verify": "hardhat verify",
    "slither": "slither contracts/SQRVesting.sol --solc-remaps '@openzeppelin=node_modules/@openzeppelin'",
    "coverage": "cross-env COVERAGE=true cross-env ENV=test hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" --show-stack-traces",
    "deploy": "hardhat deploy",
    "deploy:accounts": "hardhat deploy --tags accounts",
    "deploy:deploy": "hardhat deploy --tags SQRVesting:deploy",
    "deploy:verify": "hardhat deploy --tags SQRVesting:verify",
    "deploy:fetch": "hardhat deploy --tags SQRVesting:fetch",
    "deploy:send-tokens": "hardhat deploy --tags SQRVesting:send-tokens",
    "deploy:set-allocations": "hardhat deploy --tags SQRVesting:set-allocations",
    "deploy:fetch-funds": "hardhat deploy --tags IDepositRefund:fetch-funds",
    "deploy:fetch-allocations": "hardhat deploy --tags SQRVesting:fetch-allocations",
    "deploy:fetch-allocations-from-db": "hardhat deploy --tags SQRVesting:fetch-allocations-from-db",
    "deploy:massive-set-allocations": "hardhat deploy --tags SQRVesting:massive-set-allocations",
    "deploy:generate-random-allocations": "hardhat deploy --tags SQRVesting:generate-random-allocations",
    "deploy:claim1": "hardhat deploy --tags SQRVesting:claim1",
    "deploy:claim2": "hardhat deploy --tags SQRVesting:claim2",
    "deploy:claim3": "hardhat deploy --tags SQRVesting:claim3",
    "deploy:refund1": "hardhat deploy --tags SQRVesting:refund1",
    "deploy:refund2": "hardhat deploy --tags SQRVesting:refund2",
    "deploy:refund3": "hardhat deploy --tags SQRVesting:refund3",
    "deploy:set-available-refund": "hardhat deploy --tags SQRVesting:set-available-refund",
    "deploy:set-refund-start-date": "hardhat deploy --tags SQRVesting:set-refund-start-date",
    "deploy:set-refund-close-date": "hardhat deploy --tags SQRVesting:set-refund-close-date",
    "deploy:withdraw-excess-amount": "hardhat deploy --tags SQRVesting:withdraw-excess-amount",
    "deploy:transfer-ownership": "hardhat deploy --tags SQRVesting:transfer-ownership",
    "deploy:force-withdraw": "hardhat deploy --tags SQRVesting:force-withdraw",
    "deploy:publish-abi": "hardhat deploy --tags SQRVesting:publish-abi",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./eslint.config.js",
    "postinstall": "husky install && set DOTENV_CONFIG_PATH=./.env.example yarn typechain",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "format": "prettier --config ./.prettierrc --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "format:check": "prettier --check --config ./.prettierrc.yml \"**/*.{js,json,md,sol,ts,yml}\"",
    "test": "cross-env ENV=test hardhat test --network hardhat",
    "unit-test": "mocha -r ts-node/register 'common/**/*spec.ts'",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/bignumber": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@nomicfoundation/hardhat-ignition": "^0.15.4",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@nomicfoundation/ignition-core": "^0.15.4",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/hardhat-upgrades": "^3.1.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/bluebird": "^3.5.42",
    "@types/chai": "^4.3.16",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.17.4",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.14.0",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "app-root-path": "^3.1.0",
    "bluebird": "^3.7.2",
    "chai": "^4.3.10",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eth-permit": "^0.2.3",
    "ethers": "^6.12.2",
    "fastify-tsconfig": "^2.0.0",
    "fs-extra": "^11.2.0",
    "hardhat": "^2.22.5",
    "hardhat-deploy": "^0.12.4",
    "hardhat-gas-reporter": "^2.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "lodash": "^4.17.21",
    "merkletreejs": "^0.3.11",
    "mocha": "^10.4.0",
    "pinst": "^3.0.0",
    "prettier": "^3.3.0",
    "prettier-plugin-solidity": "^1.3.1",
    "shx": "^0.3.4",
    "solhint": "^5.0.1",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.12",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.2",
    "typescript": "^5.4.5",
    "uuid": "^9.0.1"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethers",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity",
    "typescript",
    "typechain"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "decimal.js": "^10.4.3",
    "pg": "^8.12.0"
  }
}
